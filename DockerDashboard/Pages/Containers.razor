@page "/containers"
@using System.Globalization
@using System.Net
<h3>Containers</h3>

<div class="row">
    <div class="col-lg-8">
        <div id="containers-table" class="card">
            <div class="card-header">
                containers
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Category</th>
                            <th>Subject</th>
                            <th>Amount</th>
                            <th>&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (containers == null)
                        {
                            <tr><td><em>Loading...</em></td></tr>
                        }
                        else
                        {
                            @foreach (var container in containers)
                            {
                                <tr>
                                    <td>@container.Date.ToShortDateString()</td>
                                    <td>@container.Category</td>
                                    <td>@container.Subject</td>
                                    <td>@container.Amount.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</td>
                                    <td><button type="button" class="btn btn-danger btn-sm" @onclick="() => OpenDeleteDialog(container)">Delete</button></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <containerForm OnSubmitCallback="@Refresh"></containerForm>
    </div>
</div>
<div>&nbsp;</div>
@if (DeleteDialogOpen)
{
    <ModalDialog Title="Are you sure?"
                 Text="Do you want to delete this entry?"
                 OnClose="@OnDeleteDialogClose"
                 DialogType="ModalDialog.ModalDialogType.DeleteCancel">
    </ModalDialog>
}

@code {
    private container[] containers;

    private container _containerToDelete;
    public bool DeleteDialogOpen { get; set; }

    private async Task OnDeleteDialogClose(bool accepted)
    {
        if (accepted)
        {
            await WebRequestMethods.Http.DeleteAsync($"api/containers/{_containerToDelete.Id}");
            await LoadData();
            _containerToDelete = null;
        }

        DeleteDialogOpen = false;
        StateHasChanged();
    }

    private void OpenDeleteDialog(container container)
    {
        DeleteDialogOpen = true;
        _containerToDelete = container;
        StateHasChanged();
    }

    protected async override Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        containers = await WebRequestMethods.Http.GetFromJsonAsync<container[]>("api/containers");
        StateHasChanged();
    }

    public async void Refresh()
    {
        await LoadData();
    }
}
